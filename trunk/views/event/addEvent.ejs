<!doctype html>
<html>
	<head>
		<title>Myniti - Create new event</title>
		
	</head>
	<body>
		<h1>Create new event</h1>
		<form method="post" action="">
		<table>
			<thead></thead>
			<tbody>
				<tr><th>Name</th><td><input type="text" name="name" placeholder="Event name" required /></td></tr>
				<tr><th>Start time</th><td><input type="date" name="start" placeholder="Start time" /></td></tr>
				<tr><th>End time</th><td><input type="date" name="end" placeholder="End time" /></td></tr>
				<tr><th>Description</th><td><input type="text" name="description" placeholder="Description" /></td></tr>
				<tr><th>Location</th><td><input type="text" name="location" placeholder="Location" /></td></tr>
				<tr><th>Privacy</th>
					<td><input type="radio" name="privacy" value="p" /> Private
						<input type="radio" name="privacy" value="g" /> Group
						<input type="radio" name="privacy" value="c" /> Close community
						<input type="radio" name="privacy" value="o" /> Open community
					</td>
				</tr>
				<tr><th>Invite</th><td><input type="text" name="user" placeholder="Invite your friends"/></td></tr>
				<tr><th>Invite right</th>
					<td><input type="checkbox" onclick="allRight()" name="all" /> All 
						<input type="text" name="invite" placeholder="People with invite right" />
					</td>
				</tr>
				<tr><th>Color</th><td><input type="text" name="color" placeholder="Event color" /></td></tr>
				<tr><th>Alarm</th>
					<td><input type="checkbox" name="alarm" /> Alarm </td>
				</tr>
			</tbody>
		</table>
		<input type="submit" value="Submit" />
		</form>
	</body>
</html>